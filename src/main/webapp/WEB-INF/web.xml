<?xml version="1.0" encoding="UTF-8" ?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="3.0">
	<display-name>J2EE-Spring-Maven</display-name>

	<!-- make the JNDI DataSource available to the application under the specified namespace jdbc/taskdb -->
